<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-170dp"
        tools:layout_editor_absoluteY="68dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="Intent Guided Exercise"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Age"
                android:inputType="number" />

            <TextView
                android:id="@+id/lblGender"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="Gender"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <LinearLayout
                    android:layout_width="408dp"
                    android:layout_height="37dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdoMale"
                        android:layout_width="97dp"
                        android:layout_height="37dp"
                        android:text="Male"
                        tools:layout_editor_absoluteX="79dp"
                        tools:layout_editor_absoluteY="274dp" />

                    <RadioButton
                        android:id="@+id/rdoFemale"
                        android:layout_width="125dp"
                        android:layout_height="37dp"
                        android:text="Female" />
                </LinearLayout>

            </RadioGroup>

            <TextView
                android:id="@+id/lblSubject"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="What is/are your favorite computer subjects?"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkAPPDET"
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:text="APPDET" />

                <CheckBox
                    android:id="@+id/chkCOMPROG1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPROG1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkCOMPROG2"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="COMPROG2" />

                <CheckBox
                    android:id="@+id/chkINTCOMP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTCOMP" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblJob"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="What job do you prefer after graduation?"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnJob"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/lblTitleJob"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="Which do you prefer for a thesis topic/title?"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/lvThesis"
                android:layout_width="409dp"
                android:layout_height="172dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>