<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntentResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblTitleIntent"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:gravity="center"
                android:text="Intent Guided Activity"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblNameIntent"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="Name: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAgeIntent"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="Age:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblGenderIntent"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="Gender: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblJobIntent"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="Job:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblSubjectsIntent"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="Subject/s:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblThesisIntent"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="Thesis Topic: "
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>